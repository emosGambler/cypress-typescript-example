{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "tmp",
        "lib" : ["es2015", "es2015.iterable", "dom"],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "cypress/**/*.ts",
        "node_modules/cypress/index.d.ts"
    ]
}